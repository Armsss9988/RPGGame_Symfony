            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            <!-- JavaScript Bundle with Popper -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    {% if app.user %}
    {% block header %}

    <header class="container-sm  mt-5 mx-auto justify-content-center align-items-center bg-black bg-opacity-10 text-white">
        <h1 class="d-flex justify-content-center pt-3">PC RPG GAME</h1>
        <div class="row w-100">
            <div class="col-2  d-flex justify-content-center ">
                <a class="btn btn-dark" role="button" href="{{ path('app_game_index') }}">Home</a>
            </div>
            <div class="col-8  d-flex justify-content-end ">
                <button class="btn btn-dark bg-black ">Hello {{ app.user.Email }}</button>
            </div>
            <div class="col-2 ">
                <a class="btn btn-dark" role="button" href="{{ path('app_logout') }}">LOGOUT</a>
            </div>
        </div>
    </header>
    {% endblock %}
        {% endif %}
