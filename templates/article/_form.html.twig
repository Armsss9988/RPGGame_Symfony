{% block body %}
    <section class="vh-100 bg-black " >
        <div class="container-fluid h-100">

            <div class="row d-flex justify-content-center align-items-center h-100">
                {{ form_start(form, {'attr': {class:'mx-1 mx-md-4'}}) }}
                <div class="col-lg-12 col-xl-6 bg">
                    <button type="submit" class="btn btn-danger btn-lg col-12 h1 text-white fw-bold bg-black opacity-50" style="border-radius: 25px;">{{ button_label|default('Create Artile') }}</button>
                    <div class="card bg-dark opacity-75" style="border-radius: 25px; ">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-6 order-2 order-lg-1 text-white">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_widget(form.Title, {'attr': {type: 'text',class: 'form-control'} }) }}
                                            <label class="form-label" for="form3Example3c">Title</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-6 order-2 order-lg-1 text-white">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_widget(form.Paragraph, {
                                                'attr': {type: 'text',id: 'form3Example1c',class: 'form-control'}
                                            }) }}
                                            <label class="form-label" for="form3Example4c">Paragraph</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mx-auto mb-5 form-check-label">

                                </div>

                                    {{ form_end(form) }}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

