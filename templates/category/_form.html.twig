{% block body %}
        <section class="vh-100 bg-black opacity-75" >
            <div class="container h-100 ">

                <div class="row d-flex justify-content-center align-items-center h-100">

                    <div class="col-lg-12 col-xl-6 bg">
                        <p class="text-center h1 fw-bold text-white bg-black opacity-75 " style="border-radius: 25px;">{{ button_label|default('New Category!!!') }}</p>
                        <div class="card bg-dark opacity-75" style="border-radius: 25px; ">
                            <div class="card-body p-md-5">
                                <div class="row justify-content-center">
                                    <div class="col-md-10 col-lg-6 col-xl-6 order-2 order-lg-1 text-white">
                                        {{ form_start(form, {'attr': {class:'mx-1 mx-md-4'}}) }}

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                {{ form_widget(form.Name, {'attr': {type: 'text',id: 'form3Example1c',class: 'form-control'} }) }}
                                                <label class="form-label" for="form3Example3c">Name</label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                {{ form_widget(form.Description, {
                                                    'attr': {'rows':'5', 'class': 'form-control', 'id': 'exampleFormControlTextarea1'}
                                                }) }}
                                                <label class="form-label" for="form3Example4c">Description</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-10 col-lg-6 col-xl-6 order-2 order-lg-1 text-white">
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">

                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">

                                            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                                        </div>


                                        {{ form_end(form) }}

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>



{% endblock %}

