<body class="container-sm w-75 mt-5 mx-auto justify-content-center align-items-center bg-black bg-opacity-75 text-white">
    <div class="row pt-5">
        <div class="col-6">
            <table class="table text-danger">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ game.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ game.Name }}</td>
                    </tr>
                    <tr>
                        <th>Ram</th>
                        <td>{{ game.Ram }}</td>
                    </tr>
                    <tr>
                        <th>DiskSpace</th>
                        <td>{{ game.DiskSpace }}</td>
                    </tr>
                    <tr>
                        <th>UpdateTime</th>
                        <td>{{ game.UpdateTime ? game.UpdateTime|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>
                            <ul class="list-group list-group-horizontal col">
                                {% for gameCategory in game.getGameCategories() %}
                                    <a href="{{ path('app_game_index',{'categoryID': gameCategory.Category.id}) }}" style="text-decoration: none;"><li class="list-group-item px-1 text-truncate text-danger bg-black bg-opacity-10"> {{ gameCategory.Category.Name }}</li> </a>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        {{ include('game_category/_delete_form.html.twig') }}
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>
            {% if is_granted('ROLE_ADMIN') %}
            <div class="border border-danger w-50">
            {{ form_start(formCategory) }}
            <label class="d-flex justify-content-center w-100 text-danger ">ADD Category</label>
            {{ form_widget(formCategory.Category, {
                'attr': {class: 'form-control'}
            }) }}
            <button type="submit" class=" w-100 btn btn-primary text-danger bg-black border border-danger rounded-pill">Submit</button>
            {{ form_end(formCategory) }}
            </div>
            {% endif %}
        </div>

        <div class="col-6">
            <img class="border img-fluid w-100"  src="{{ asset('/image/game/' ~  game.ImgURL) }}" alt="">
        </div>


    <h1 class=" mt-5 text-danger bg-black w-100 border border-warning d-flex justify-content-center"> Description</h1>
